@{
    ViewData["Title"] = "TalepOlustur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@using AkaDestekTalep.Models
@model DestekTürüViewModel*@
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const stepperNav = document.querySelector('.stepper-nav');
        const steps = stepperNav.querySelectorAll('.stepper-item');

        // İlk adımı etkinleştir
        steps[0].classList.add('current');

        // Devam Et butonunu bul ve tıklandığında bir sonraki adımı aktif hale getir
        const continueButton = document.querySelector('[data-kt-element="type-next"]');
        continueButton.addEventListener('click', function (e) {
            e.preventDefault();
            const currentStep = stepperNav.querySelector('.current');

            // Eğer mevcut adım son adım değilse, bir sonraki adımı aktif yap
            const currentIndex = Array.from(steps).indexOf(currentStep);
            if (currentIndex >= 0 && currentIndex < steps.length - 1) {
                currentStep.classList.remove('current');
                steps[currentIndex + 1].classList.add('current');
            }
        });
    });
</script>

<div class="content d-flex flex-column flex-column-fluid" id="kt_content" data-select2-id="select2-data-kt_content">
    <!--begin::Container-->
    <div class="container-xxl" id="kt_content_container" data-select2-id="select2-data-kt_content_container">
        <!--begin::Card-->
        <div class="card" data-select2-id="select2-data-78-j11a">
            <div class="modal-body scroll-y m-5">
                <!--begin::Stepper-->
                <div class="stepper stepper-links d-flex flex-column" id="kt_modal_create_project_stepper" data-kt-stepper="true">
                    <!--begin::Container-->
                    <div class="container">
                        <!--begin::Nav-->
                        <div class="stepper-nav justify-content-center py-2">
                            <!--begin::Step 1-->
                            <div class="stepper-item me-5 me-md-15 current " data-kt-stepper-element="nav">
                                <h3 class="stepper-title">
                                    Destek Türü
                                </h3>
                            </div>
                            <!--end::Step 1-->
                            <!--begin::Step 2-->
                            <div class="stepper-item me-5 me-md-15" data-kt-stepper-element="nav">
                                <h3 class="stepper-title">
                                    Destek Konusu
                                </h3>
                            </div>
                            <!--end::Step 2-->
                            <!--begin::Step 3-->
                            <div class="stepper-item me-5 me-md-15" data-kt-stepper-element="nav">
                                <h3 class="stepper-title">
                                    Diğer
                                </h3>
                            </div>
                            <!--end::Step 3-->
                        </div>
                        <!--end::Nav-->
                        <!--begin::Form-->
                        <form class="mx-auto w-100 mw-600px pt-15 pb-10 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" id="kt_modal_create_project_form" method="post">
                            <!--begin::Type-->
                            <div class="current" data-kt-stepper-element="content">
                                <!--begin::Wrapper-->
                                <div class="w-100">
                                    <!--begin::Heading-->
                                    <div class="pb-7 pb-lg-12">
                                        <!--begin::Title-->
                                        <h1 class="fw-bold text-dark">Destek Türü</h1>
                                        <!--end::Title-->
                                        <!--begin::Description-->
                                        <div class="text-muted fw-semibold fs-4">
                                           Destek almak istediğiniz alanı seçin...
                                        </div>
                                        <!--end::Description-->
                                    </div>
                                    <!--end::Heading-->
                                    <!--begin::Input group-->
                                    <div class="fv-row mb-15 fv-plugins-icon-container" data-kt-buttons="true" data-kt-initialized="1">
                                        @foreach(var item in Model.Türü)
                                        {
                                        <!--begin::Option-->
                                        <label class="btn btn-outline btn-outline-dashed btn-active-light-primary d-flex text-start p-6 mb-6 active">
                                            <!--begin::Input-->
                                            <input class="btn-check" type="radio" checked="checked" name="KonularPost" value="@item.Id">
                                            <!--end::Input-->
                                            <!--begin::Label-->
                                            <span class="d-flex">
                                                <!--begin::Icon-->
                                                <i class="ki-duotone ki-profile-circle fs-3hx"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>                    <!--end::Icon-->
                                                <!--begin::Info-->
                                                <span class="ms-4">
                                                    <span class="fs-3 fw-bold text-gray-900 mb-2 d-block">@item.Konu</span>

                                                   @* <span class="fw-semibold fs-4 text-muted">
                                                        @item.Aciklama
                                                    </span>*@
                                                </span>
                                                <!--end::Info-->
                                            </span>
                                            <!--end::Label-->
                                        </label>
                                        <!--end::Option-->
                                        }
                                        <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Actions-->
                                    <div class="d-flex justify-content-end">
                                        <button type="submit" class="btn btn-lg btn-primary" data-kt-element="type-next">
                                            <span class="indicator-label">
                                                Destek Konusu
                                            </span>
                                            <span class="indicator-progress">
                                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                    </div>
                                    <!--end::Actions-->
                                </div>
                                <!--end::Wrapper-->
                            </div>
                            <!--end::Type-->
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--begin::Container-->
                </div>
                <!--end::Stepper-->
            </div>
        </div>
    </div>
</div>