@{
    ViewData["Title"] = "DestekAl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using AkaDestekTalep.Models
@model DestekAlViewModel
<div class="content d-flex flex-column flex-column-fluid" id="kt_content" data-select2-id="select2-data-kt_content">
    <!--begin::Container-->
    <div class="container-xxl" id="kt_content_container" data-select2-id="select2-data-kt_content_container">
        <!--begin::Card-->
        <div class="card" data-select2-id="select2-data-78-j11a">
            <form class="mx-auto w-100 mw-600px pt-15 pb-10 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" id="kt_modal_create_project_form" method="post">
                    <!--begin::Type-->
                    <div class="current" data-kt-stepper-element="content">
                        <!--begin::Wrapper-->
                        <div class="w-100">
                        @foreach(var item in Model.Turler)
                        {
                            <!--begin::Input group-->
                            <div class="fv-row mb-15 fv-plugins-icon-container" data-kt-buttons="true" data-kt-initialized="1">
                                <!--begin::Option-->
                                <label class="btn btn-outline btn-outline-dashed btn-active-light-primary d-flex text-start p-6 mb-6 active">
                                    <!--begin::Input-->
                                    <input class="btn-check" type="radio" checked="checked" name="SelectTur" value="@item.Id">
                                    <!--end::Input-->
                                    <!--begin::Label-->
                                    <span class="d-flex">
                                        <!--begin::Icon-->
                                        <i class="ki-duotone ki-profile-circle fs-3hx"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>                    <!--end::Icon-->
                                        <!--begin::Info-->
                                        <span class="ms-4">
                                            <span class="fs-3 fw-bold text-gray-900 mb-2 d-block">@item.DestekTuru</span>

                                            <span class="fw-semibold fs-4 text-muted">
                                                @item.Aciklama
                                            </span>
                                        </span>
                                        <!--end::Info-->
                                    </span>
                                    <!--end::Label-->
                                </label>
                                <!--end::Option-->
                                <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                            </div>
                            <!--end::Input group-->
                        }
                        </div>
                        <!--end::Wrapper-->
                    </div>
                    <!--end::Type-->
                
                <!--begin::Input group-->
<div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container">
                        <!--begin::Label-->
                        <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                              <span class="required">Destek Konusu</span>


<span class="ms-1" dat  a-bs-toggle="tooltip" aria-label="Specify a target name for future usage and reference" data-bs-original-title="Specify a target name for future usage and reference" data-kt-initialized="1">
    <i class="ki-duotone ki-information-5 text-gray-500 fs-6"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i></span>                        </label>
                        <!--end::Label-->

                        <!--begin::Input group-->
                <div class="form-floating">
                    <select name="SecilenKonu" class="form-select" id="floatingSelect" aria-label="Floating label select example">
                        <option selected="">Konuyu Seçin</option>
                            @foreach (var item1 in Model.Konular)
                            {
                                <option value="@item1.Id">@item1.Konu</option>
                            }
                    </select>
                    <label for="floatingSelect">Konuyu Seçin</label>
                </div>
                <!--end::Input group-->
                    <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div></div>
                <!--end::Input group-->
                <!--begin::Input group-->
                <div class="form-floating">
                    <select name="SecilenAdmin" class="form-select" id="floatingSelect" aria-label="Floating label select example">
                        <option selected>Destek</option>
                        @foreach(var item2 in Model.Adminler)
                        {
                        <option value="@item2.Id">@item2.FirstName @item2.LastName</option>
                        }
                    </select>
                    <label for="floatingSelect">Admin Seçin</label>
                </div>
                <!--end::Input group-->
                <div class="mb-0">
                    <label class="form-label">Solid background style</label>
                    <input class="form-control form-control-solid" value="tag1, tag2, tag3" id="kt_tagify_2" />
                </br>
                </br>
                </br>
                    <div class="text-center">
                        <button type="reset" id="kt_modal_new_target_cancel" class="btn btn-light me-3">
                            Çıkış
                        </button>
                        <button type="submit" id="kt_modal_new_target_submit" class="btn btn-primary">
                            <span class="indicator-label">
                                Kaydet
                            </span>
                        </button>
                    </div>
            </form>
            <!--end::Form-->
        </div>
    </div>
</div>